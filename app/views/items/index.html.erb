<ul class="nav nav-tabs">
  <li role="presentation"><%= link_to 'Все товары',  root_path%></li>
  <%@k.each do |k|%>
    <li role="presentation"><%= link_to k.name,  root_path(:kind => k.id)%></li>
  <%end%>
</ul>
<br>

<div class="row">
  <%unless @i.nil?%>
    <%@i.each do |i|%>
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <%=image_tag(i.image, alt: i.name)%>
          <div class="caption">
            <h3><%=i.name%></h3>
            <p>Цена: <%=i.price%> руб.</p>
            <p><%=link_to 'Добавить в корзину', items_cart_add_path(:item => i.id), {class: "btn btn-primary", role: "button"}%> <%=link_to 'Подробнее', root_path, {class: "btn btn-default", role: "button"}%></p>
          </div>
        </div>
      </div>
    <%end%>
  <%end%>
</div>  